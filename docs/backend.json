
{
  "entities": {
    "user": {
      "title": "User",
      "description": "A user of the application.",
      "type": "object",
      "properties": {
        "displayName": {
          "type": "string",
          "description": "The user's display name."
        },
        "email": {
          "type": "string",
          "description": "The user's email address.",
          "format": "email"
        },
        "photoURL": {
          "type": "string",
          "description": "The URL of the user's profile picture.",
          "format": "uri"
        },
        "phoneNumber": {
          "type": "string",
          "description": "The user's phone number."
        },
        "role": {
          "type": "string",
          "description": "The role of the user, determining their permissions and dashboard view.",
          "enum": [
            "customer",
            "agent"
          ]
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "The timestamp when the user account was created."
        }
      },
      "required": [
        "displayName",
        "email",
        "role"
      ]
    },
    "property": {
      "title": "Property",
      "description": "A real estate property listing.",
      "type": "object",
      "properties": {
        "agentId": {
          "type": "string",
          "description": "The UID of the agent who created the listing."
        },
        "address": {
          "type": "string"
        },
        "city": {
          "type": "string"
        },
        "state": {
          "type": "string"
        },
        "price": {
          "type": "number"
        },
        "listing_type": {
          "type": "string",
          "enum": [
            "sale",
            "rent"
          ]
        },
        "price_period": {
          "type": "string",
          "enum": [
            "yearly",
            "monthly",
            "quarterly"
          ]
        },
        "beds": {
          "type": "number"
        },
        "baths": {
          "type": "number"
        },
        "sqft": {
          "type": "number"
        },
        "home_type": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "imageUrl": {
          "type": "string",
          "format": "uri"
        },
        "imageHint": {
          "type": "string"
        },
        "is_furnished": {
          "type": "boolean"
        },
        "power_supply": {
          "type": "string"
        },
        "water_supply": {
          "type": "string"
        },
        "security_type": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "status": {
          "type": "string"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": [
        "agentId",
        "address",
        "city",
        "state",
        "price",
        "listing_type",
        "beds",
        "baths",
        "sqft",
        "home_type",
        "imageUrl"
      ]
    },
    "savedHome": {
      "title": "Saved Home",
      "description": "A user's saved property.",
      "type": "object",
      "properties": {
        "property_data": {
          "$ref": "#/entities/property"
        },
        "saved_at": {
          "type": "string",
          "format": "date-time",
          "description": "The timestamp when the user saved the home."
        }
      },
      "required": [
        "property_data",
        "saved_at"
      ]
    },
    "viewedProperty": {
      "title": "Viewed Property",
      "description": "A user's viewed property.",
      "type": "object",
      "properties": {
        "property_data": {
          "$ref": "#/entities/property"
        },
        "viewed_at": {
          "type": "string",
          "format": "date-time",
          "description": "The timestamp when the user viewed the property."
        }
      },
      "required": [
        "property_data",
        "viewed_at"
      ]
    }
  },
  "auth": {
    "providers": [
      "anonymous",
      "google.com",
      "password"
    ]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/entities/user"
      },
      "description": "Stores user profile information."
    },
    "/users/{userId}/saved_homes/{propertyId}": {
      "schema": {
        "$ref": "#/entities/savedHome"
      },
      "description": "Stores a user's saved properties. The document ID is the property ID."
    },
    "/users/{userId}/viewed_properties/{propertyId}": {
      "schema": {
        "$ref": "#/entities/viewedProperty"
      },
      "description": "Stores a user's viewed properties. The document ID is the property ID."
    },
    "/properties/{propertyId}": {
      "schema": {
        "$ref": "#/entities/property"
      },
      "description": "Stores all property listings."
    }
  }
}
