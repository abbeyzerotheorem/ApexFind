
{
  "entities": {
    "user": {
      "title": "User",
      "description": "A user of the application.",
      "type": "object",
      "properties": {
        "displayName": {
          "type": "string",
          "description": "The user's display name."
        },
        "email": {
          "type": "string",
          "description": "The user's email address.",
          "format": "email"
        },
        "photoURL": {
          "type": "string",
          "description": "The URL of the user's profile picture.",
          "format": "uri"
        },
        "phoneNumber": {
          "type": "string",
          "description": "The user's phone number."
        }
      },
      "required": ["displayName", "email"]
    },
    "property": {
      "title": "Property",
      "description": "A real estate property listing.",
      "type": "object",
      "properties": {
        "id": {
          "type": "number",
          "description": "Unique identifier for the property."
        },
        "address": {
          "type": "string"
        },
        "price": {
          "type": "number"
        },
        "beds": {
          "type": "number"
        },
        "baths": {
          "type": "number"
        },
        "sqft": {
          "type": "number"
        },
        "imageUrl": {
          "type": "string",
          "format": "uri"
        },
        "listing_type": {
          "type": "string",
          "enum": ["sale", "rent"]
        }
      },
      "required": [
        "id",
        "address",
        "price",
        "beds",
        "baths",
        "sqft",
        "imageUrl",
        "listing_type"
      ]
    },
    "savedHome": {
      "title": "Saved Home",
      "description": "A user's saved property.",
      "type": "object",
      "properties": {
        "property_data": {
          "$ref": "#/entities/property"
        },
        "saved_at": {
          "type": "string",
          "format": "date-time",
          "description": "The timestamp when the user saved the home."
        }
      },
      "required": ["property_data", "saved_at"]
    },
    "savedSearch": {
      "title": "Saved Search",
      "description": "A user's saved search criteria and alert preferences.",
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "A user-provided name for the search (e.g., 'Downtown Condos')."
        },
        "description": {
          "type": "string",
          "description": "A summary of the search criteria (e.g., 'Lagos, NG • ₦150M - ₦300M • 2+ Beds')."
        },
        "searchParams": {
          "type": "string",
          "description": "The URL query string representing the search filters."
        },
        "alertFrequency": {
          "type": "string",
          "enum": ["daily", "weekly", "instant", "never"],
          "description": "How often the user wants to receive alerts for new matches."
        },
        "newMatchCount": {
          "type": "number",
          "description": "The number of new matching properties found since the last check."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "The timestamp when the user saved the search."
        }
      },
      "required": [
        "name",
        "description",
        "searchParams",
        "alertFrequency",
        "createdAt"
      ]
    }
  },
  "auth": {
    "providers": ["anonymous", "google.com", "password"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/entities/user"
      },
      "description": "Stores user profile information."
    },
    "/users/{userId}/saved_homes/{propertyId}": {
      "schema": {
        "$ref": "#/entities/savedHome"
      },
      "description": "Stores a user's saved properties. The document ID is the property ID."
    },
    "/users/{userId}/saved_searches/{searchId}": {
      "schema": {
        "$ref": "#/entities/savedSearch"
      },
      "description": "Stores a user's saved search criteria and alert preferences."
    }
  }
}
