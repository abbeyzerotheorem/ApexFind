
{
  "entities": {
    "user": {
      "title": "User",
      "description": "A user of the application.",
      "type": "object",
      "properties": {
        "displayName": {
          "type": "string",
          "description": "The user's display name."
        },
        "email": {
          "type": "string",
          "description": "The user's email address.",
          "format": "email"
        },
        "photoURL": {
          "type": "string",
          "description": "The URL of the user's profile picture.",
          "format": "uri"
        },
        "phoneNumber": {
          "type": "string",
          "description": "The user's phone number."
        },
        "about": {
          "type": "string",
          "description": "A short biography of the user, visible on their public profile."
        },
        "specialties": {
          "type": "array",
          "description": "A list of real estate specialties for agents.",
          "items": {
            "type": "string"
          }
        },
        "languages": {
          "type": "array",
          "description": "A list of languages spoken by the agent.",
          "items": {
            "type": "string"
          }
        },
        "role": {
          "type": "string",
          "description": "The role of the user, determining their permissions and dashboard view.",
          "enum": [
            "customer",
            "agent",
            "admin"
          ]
        },
        "agencyId": {
          "type": "string",
          "description": "The ID of the agency this user belongs to."
        },
        "title": {
          "type": "string",
          "description": "The agent's professional title."
        },
        "company": {
          "type": "string",
          "description": "The agent's real estate company."
        },
        "experience": {
          "type": "number",
          "description": "Years of experience in real estate."
        },
        "sales": {
          "type": "number",
          "description": "Number of sales in the last 24 months."
        },
        "rating": {
          "type": "number",
          "description": "Average client rating out of 5."
        },
        "reviewCount": {
          "type": "number",
          "description": "Total number of client reviews."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "The timestamp when the user account was created."
        },
        "preferences": {
          "type": "object",
          "description": "The user's saved property preferences.",
          "properties": {
            "locations": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "propertyTypes": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "budgetRange": {
              "type": "string"
            },
            "alertFrequency": {
              "type": "string"
            },
            "savedSearches": {
              "type": "boolean"
            }
          }
        },
        "preferencesCompletedAt": {
          "type": "string",
          "format": "date-time",
          "description": "The timestamp when the user completed the preferences flow."
        },
        "onboarding": {
          "type": "object",
          "description": "Tracks the user's onboarding status.",
          "properties": {
            "completed": {
              "type": "boolean",
              "description": "Whether the user has completed the entire onboarding flow."
            },
            "completedAt": {
              "type": "string",
              "format": "date-time",
              "description": "Timestamp when the user completed onboarding."
            },
            "stepsCompleted": {
              "type": "number",
              "description": "The number of onboarding steps the user has seen."
            },
            "preferencesSet": {
              "type": "boolean",
              "description": "Whether the user has set their initial preferences."
            }
          }
        },
        "lastLogin": {
          "type": "string",
          "format": "date-time",
          "description": "Timestamp of the user's last login."
        }
      },
      "required": [
        "displayName",
        "email",
        "role"
      ]
    },
    "agency": {
      "title": "Agency",
      "description": "A real estate agency or firm.",
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "licenseNumber": { "type": "string" },
        "yearsInOperation": { "type": "number" },
        "location": { "type": "string" },
        "specialties": { "type": "array", "items": { "type": "string" } },
        "rating": { "type": "number" },
        "reviewCount": { "type": "number" },
        "photoURL": { "type": "string", "format": "uri" },
        "about": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "phoneNumber": { "type": "string" },
        "verificationBadges": { "type": "array", "items": { "type": "string" } },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["name", "licenseNumber", "location"]
    },
    "property": {
      "title": "Property",
      "description": "A real estate property listing.",
      "type": "object",
      "properties": {
        "agentId": {
          "type": "string",
          "description": "The UID of the agent who created the listing."
        },
        "address": {
          "type": "string"
        },
        "city": {
          "type": "string"
        },
        "state": {
          "type": "string"
        },
        "price": {
          "type": "number"
        },
        "listing_type": {
          "type": "string",
          "enum": [
            "sale",
            "rent"
          ]
        },
        "price_period": {
          "type": "string",
          "enum": [
            "yearly",
            "monthly",
            "quarterly"
          ]
        },
        "beds": {
          "type": "number"
        },
        "baths": {
          "type": "number"
        },
        "sqft": {
          "type": "number"
        },
        "home_type": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "imageUrl": {
          "type": "string",
          "format": "uri"
        },
        "imageHint": {
          "type": "string"
        },
        "is_furnished": {
          "type": "boolean"
        },
        "has_pool": {
          "type": "boolean",
          "description": "Indicates if the property has a swimming pool."
        },
        "parking_spaces": {
          "type": "number",
          "description": "Number of parking spaces available."
        },
        "yearBuilt": {
          "type": "number",
          "description": "The year the property was built."
        },
        "power_supply": {
          "type": "string"
        },
        "water_supply": {
          "type": "string"
        },
        "security_type": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "status": {
          "type": "string"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": [
        "agentId",
        "address",
        "city",
        "state",
        "price",
        "listing_type",
        "beds",
        "baths",
        "sqft",
        "home_type",
        "imageUrl"
      ]
    },
    "savedHome": {
      "title": "Saved Home",
      "description": "A user's saved property.",
      "type": "object",
      "properties": {
        "property_data": {
          "$ref": "#/entities/property"
        },
        "saved_at": {
          "type": "string",
          "format": "date-time",
          "description": "The timestamp when the user saved the home."
        }
      },
      "required": [
        "property_data",
        "saved_at"
      ]
    },
    "savedSearch": {
      "title": "Saved Search",
      "description": "A user's saved search criteria.",
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "The name given to the search by the user."
        },
        "description": {
          "type": "string",
          "description": "A generated summary of the search criteria."
        },
        "searchParams": {
          "type": "string",
          "description": "The URL search parameters for the search."
        },
        "alertFrequency": {
          "type": "string",
          "enum": [
            "daily",
            "weekly",
            "instant",
            "never"
          ]
        },
        "newMatchCount": {
          "type": "number",
          "description": "Number of new matches since last view."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": [
        "name",
        "description",
        "searchParams"
      ]
    },
    "viewedProperty": {
      "title": "Viewed Property",
      "description": "A user's viewed property.",
      "type": "object",
      "properties": {
        "property_data": {
          "$ref": "#/entities/property"
        },
        "viewed_at": {
          "type": "string",
          "format": "date-time",
          "description": "The timestamp when the user viewed the property."
        }
      },
      "required": [
        "property_data",
        "viewed_at"
      ]
    },
    "message": {
      "title": "Message",
      "description": "A single message within a conversation.",
      "type": "object",
      "properties": {
        "senderId": {
          "type": "string",
          "description": "The UID of the message sender."
        },
        "text": {
          "type": "string",
          "description": "The content of the message."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "The timestamp when the message was sent."
        }
      },
      "required": [
        "senderId",
        "text",
        "createdAt"
      ]
    },
    "conversation": {
      "title": "Conversation",
      "description": "A chat conversation between users.",
      "type": "object",
      "properties": {
        "participants": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "An array of user UIDs participating in the conversation."
        },
        "participantDetails": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "uid": {
                "type": "string"
              },
              "displayName": {
                "type": "string"
              },
              "photoURL": {
                "type": "string"
              }
            }
          },
          "description": "Details of the participants for easy display."
        },
        "lastMessageText": {
          "type": "string",
          "description": "A snippet of the last message sent."
        },
        "lastMessageAt": {
          "type": "string",
          "format": "date-time",
          "description": "Timestamp of the last message."
        },
        "lastMessageSenderId": {
          "type": "string",
          "description": "The UID of the sender of the last message."
        }
      },
      "required": [
        "participants",
        "participantDetails"
      ]
    },
    "propertyValuation": {
      "title": "Property Valuation",
      "description": "An automated valuation of a property.",
      "type": "object",
      "properties": {
        "address": {
          "type": "string"
        },
        "city": {
          "type": "string"
        },
        "state": {
          "type": "string"
        },
        "estimatedValue": {
          "type": "number"
        },
        "inputData": {
          "type": "object"
        },
        "valuationData": {
          "type": "object"
        },
        "reportId": {
          "type": "string"
        },
        "ipAddress": {
          "type": "string"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "timestamp": {
          "type": "number"
        }
      }
    },
    "analyticsEvent": {
      "title": "Analytics Event",
      "description": "A tracked user interaction.",
      "type": "object",
      "properties": {
        "event_type": {
          "type": "string",
          "description": "The type of event being tracked (e.g., 'property_view')."
        },
        "event_data": {
          "type": "object",
          "description": "A flexible object containing data related to the event."
        },
        "timestamp": {
          "type": "string",
          "format": "date-time"
        },
        "ip_address": {
          "type": "string"
        },
        "user_agent": {
          "type": "string"
        }
      }
    }
  },
  "auth": {
    "providers": [
      "anonymous",
      "google.com",
      "password"
    ]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/entities/user"
      },
      "description": "Stores user profile information."
    },
    "/agencies/{agencyId}": {
      "schema": {
        "$ref": "#/entities/agency"
      },
      "description": "Stores real estate agency firm information."
    },
    "/users/{userId}/saved_homes/{propertyId}": {
      "schema": {
        "$ref": "#/entities/savedHome"
      },
      "description": "Stores a user's saved properties. The document ID is the property ID."
    },
    "/users/{userId}/saved_searches/{searchId}": {
      "schema": {
        "$ref": "#/entities/savedSearch"
      },
      "description": "Stores a user's saved search criteria."
    },
    "/users/{userId}/viewed_properties/{propertyId}": {
      "schema": {
        "$ref": "#/entities/viewedProperty"
      },
      "description": "Stores a user's viewed properties. The document ID is the property ID."
    },
    "/properties/{propertyId}": {
      "schema": {
        "$ref": "#/entities/property"
      },
      "description": "Stores all property listings."
    },
    "/conversations/{conversationId}": {
      "schema": {
        "$ref": "#/entities/conversation"
      },
      "description": "Stores metadata for each conversation."
    },
    "/conversations/{conversationId}/messages/{messageId}": {
      "schema": {
        "$ref": "#/entities/message"
      },
      "description": "Stores all messages for a specific conversation."
    },
    "/propertyValuations/{valuationId}": {
      "schema": {
        "$ref": "#/entities/propertyValuation"
      },
      "description": "Stores records of property valuations generated by users."
    },
    "/analytics_events/{eventId}": {
      "schema": {
        "$ref": "#/entities/analyticsEvent"
      },
      "description": "Stores user interaction events for analytics purposes. Write-only via a server-side API."
    }
  }
}
