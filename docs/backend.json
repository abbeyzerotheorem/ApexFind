
{
  "entities": {
    "user": {
      "title": "User",
      "description": "A user of the application.",
      "type": "object",
      "properties": {
        "displayName": {
          "type": "string",
          "description": "The user's display name."
        },
        "email": {
          "type": "string",
          "description": "The user's email address.",
          "format": "email"
        },
        "photoURL": {
          "type": "string",
          "description": "The URL of the user's profile picture.",
          "format": "uri"
        },
        "phoneNumber": {
          "type": "string",
          "description": "The user's phone number."
        },
        "about": {
          "type": "string",
          "description": "A short biography of the user, visible on their public profile."
        },
        "specialties": {
          "type": "array",
          "description": "A list of real estate specialties for agents.",
          "items": {
            "type": "string"
          }
        },
        "languages": {
          "type": "array",
          "description": "A list of languages spoken by the agent.",
          "items": {
            "type": "string"
          }
        },
        "role": {
          "type": "string",
          "description": "The role of the user, determining their permissions and dashboard view.",
          "enum": [
            "customer",
            "agent"
          ]
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "The timestamp when the user account was created."
        }
      },
      "required": [
        "displayName",
        "email",
        "role"
      ]
    },
    "property": {
      "title": "Property",
      "description": "A real estate property listing.",
      "type": "object",
      "properties": {
        "agentId": {
          "type": "string",
          "description": "The UID of the agent who created the listing."
        },
        "address": {
          "type": "string"
        },
        "city": {
          "type": "string"
        },
        "state": {
          "type": "string"
        },
        "price": {
          "type": "number"
        },
        "listing_type": {
          "type": "string",
          "enum": [
            "sale",
            "rent"
          ]
        },
        "price_period": {
          "type": "string",
          "enum": [
            "yearly",
            "monthly",
            "quarterly"
          ]
        },
        "beds": {
          "type": "number"
        },
        "baths": {
          "type": "number"
        },
        "sqft": {
          "type": "number"
        },
        "home_type": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "imageUrl": {
          "type": "string",
          "format": "uri"
        },
        "imageHint": {
          "type": "string"
        },
        "is_furnished": {
          "type": "boolean"
        },
        "power_supply": {
          "type": "string"
        },
        "water_supply": {
          "type": "string"
        },
        "security_type": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "status": {
          "type": "string"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": [
        "agentId",
        "address",
        "city",
        "state",
        "price",
        "listing_type",
        "beds",
        "baths",
        "sqft",
        "home_type",
        "imageUrl"
      ]
    },
    "savedHome": {
      "title": "Saved Home",
      "description": "A user's saved property.",
      "type": "object",
      "properties": {
        "property_data": {
          "$ref": "#/entities/property"
        },
        "saved_at": {
          "type": "string",
          "format": "date-time",
          "description": "The timestamp when the user saved the home."
        }
      },
      "required": [
        "property_data",
        "saved_at"
      ]
    },
    "savedSearch": {
      "title": "Saved Search",
      "description": "A user's saved search criteria.",
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "The name given to the search by the user."
        },
        "description": {
          "type": "string",
          "description": "A generated summary of the search criteria."
        },
        "searchParams": {
          "type": "string",
          "description": "The URL search parameters for the search."
        },
        "alertFrequency": {
          "type": "string",
          "enum": [
            "daily",
            "weekly",
            "instant",
            "never"
          ]
        },
        "newMatchCount": {
          "type": "number",
          "description": "Number of new matches since last view."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": [
        "name",
        "description",
        "searchParams"
      ]
    },
    "viewedProperty": {
      "title": "Viewed Property",
      "description": "A user's viewed property.",
      "type": "object",
      "properties": {
        "property_data": {
          "$ref": "#/entities/property"
        },
        "viewed_at": {
          "type": "string",
          "format": "date-time",
          "description": "The timestamp when the user viewed the property."
        }
      },
      "required": [
        "property_data",
        "viewed_at"
      ]
    },
    "message": {
      "title": "Message",
      "description": "A single message within a conversation.",
      "type": "object",
      "properties": {
        "senderId": {
          "type": "string",
          "description": "The UID of the message sender."
        },
        "text": {
          "type": "string",
          "description": "The content of the message."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "The timestamp when the message was sent."
        }
      },
      "required": [
        "senderId",
        "text",
        "createdAt"
      ]
    },
    "conversation": {
      "title": "Conversation",
      "description": "A chat conversation between users.",
      "type": "object",
      "properties": {
        "participants": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "An array of user UIDs participating in the conversation."
        },
        "participantDetails": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "uid": {
                "type": "string"
              },
              "displayName": {
                "type": "string"
              },
              "photoURL": {
                "type": "string"
              }
            }
          },
          "description": "Details of the participants for easy display."
        },
        "lastMessageText": {
          "type": "string",
          "description": "A snippet of the last message sent."
        },
        "lastMessageAt": {
          "type": "string",
          "format": "date-time",
          "description": "Timestamp of the last message."
        },
        "lastMessageSenderId": {
          "type": "string",
          "description": "The UID of the sender of the last message."
        }
      },
      "required": [
        "participants",
        "participantDetails"
      ]
    },
    "propertyValuation": {
      "title": "Property Valuation",
      "description": "An automated valuation of a property.",
      "type": "object",
      "properties": {
          "address": { "type": "string" },
          "city": { "type": "string" },
          "state": { "type": "string" },
          "estimatedValue": { "type": "number" },
          "inputData": { "type": "object" },
          "valuationData": { "type": "object" },
          "ipAddress": { "type": "string" },
          "createdAt": { "type": "string", "format": "date-time" }
      }
    }
  },
  "auth": {
    "providers": [
      "anonymous",
      "google.com",
      "password"
    ]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/entities/user"
      },
      "description": "Stores user profile information."
    },
    "/users/{userId}/saved_homes/{propertyId}": {
      "schema": {
        "$ref": "#/entities/savedHome"
      },
      "description": "Stores a user's saved properties. The document ID is the property ID."
    },
    "/users/{userId}/saved_searches/{searchId}": {
      "schema": {
        "$ref": "#/entities/savedSearch"
      },
      "description": "Stores a user's saved search criteria."
    },
    "/users/{userId}/viewed_properties/{propertyId}": {
      "schema": {
        "$ref": "#/entities/viewedProperty"
      },
      "description": "Stores a user's viewed properties. The document ID is the property ID."
    },
    "/properties/{propertyId}": {
      "schema": {
        "$ref": "#/entities/property"
      },
      "description": "Stores all property listings."
    },
    "/conversations/{conversationId}": {
      "schema": {
        "$ref": "#/entities/conversation"
      },
      "description": "Stores metadata for each conversation."
    },
    "/conversations/{conversationId}/messages/{messageId}": {
      "schema": {
        "$ref": "#/entities/message"
      },
      "description": "Stores all messages for a specific conversation."
    },
    "/propertyValuations/{valuationId}": {
      "schema": {
        "$ref": "#/entities/propertyValuation"
      },
      "description": "Stores records of property valuations generated by users."
    }
  }
}
