
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // By default, deny all reads and writes
    // This is a good practice to prevent unauthorized access
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow public read for user profiles to find agents.
    // Writes are still restricted to the user themselves.
    match /users/{userId} {
      allow read: if true;
      allow write: if request.auth.uid == userId;

      // Allow users to manage their own saved homes
      match /saved_homes/{propertyId} {
        allow read, write: if request.auth.uid == userId;
      }

      // Allow users to manage their own viewed properties
      match /viewed_properties/{propertyId} {
        allow read, write: if request.auth.uid == userId;
      }

      // Allow users to manage their own saved searches
      match /saved_searches/{searchId} {
        allow read, write: if request.auth.uid == userId;
      }
    }

    // Public read, agent-only writes for properties
    match /properties/{propertyId} {
      allow read: if true;
      allow create: if request.auth != null 
                    && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'agent'
                    && request.resource.data.agentId == request.auth.uid;
      allow update, delete: if request.auth != null 
                           && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'agent'
                           && resource.data.agentId == request.auth.uid;
    }

    // Rules for chat
    match /conversations/{conversationId} {
      // Allow a user to get a conversation document if their UID is part of the document ID.
      // This is required to check for the existence of a conversation before creating one.
      allow get: if request.auth != null && request.auth.uid in conversationId.split('_');

      // Allow a user to list conversations they are a participant in.
      allow list: if request.auth != null && request.auth.uid in resource.data.participants;

      // Allow a user to create a conversation if they are a participant in the new conversation.
      allow create: if request.auth != null && request.auth.uid in request.resource.data.participants;

      // Allow a participant to update conversation metadata (like last message).
      allow update: if request.auth != null && request.auth.uid in resource.data.participants;

      match /messages/{messageId} {
        // Allow reads if user is a participant of the parent conversation.
        allow read: if request.auth != null && request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.participants;
        
        // Allow message creation if user is a participant and the sender.
        allow create: if request.auth != null 
                      && request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.participants
                      && request.resource.data.senderId == request.auth.uid;
        
        // Disallow updates and deletes to preserve chat history.
        allow update, delete: if false;
      }
    }
  }
}
