
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // By default, deny all reads and writes
    // This is a good practice to prevent unauthorized access
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow users to read and write their own data
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;

      // Allow users to manage their own saved homes
      match /saved_homes/{propertyId} {
        allow read, write: if request.auth.uid == userId;
      }

      // Allow users to manage their own saved searches
      match /saved_searches/{searchId} {
        allow read, write: if request.auth.uid == userId;
      }
    }
  }
}
