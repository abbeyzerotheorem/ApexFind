
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // By default, deny all reads and writes
    // This is a good practice to prevent unauthorized access
    match /{document=**} {
      allow read, write: if false;
    }

    // Deny all client-side access to property valuations.
    // This collection is managed by a server-side API route.
    match /propertyValuations/{valuationId} {
      allow read, write: if false;
    }

    // Deny all client-side access to analytics events.
    // This collection is managed by a server-side API route.
    match /analytics_events/{eventId} {
      allow read, write: if false;
    }

    // Allow public read for user profiles to find agents.
    // Writes are restricted.
    match /users/{userId} {
      allow read: if true;
      // Users can create and update their own profile.
      allow create, update: if request.auth.uid == userId;
      // Users can delete their own account, or an admin can delete any user.
      allow delete: if request.auth.uid == userId || 
                      (request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin');

      // Allow users to manage their own saved homes
      match /saved_homes/{propertyId} {
        allow read, write: if request.auth.uid == userId;
      }

      // Allow users to manage their own viewed properties
      match /viewed_properties/{propertyId} {
        allow read, write: if request.auth.uid == userId;
      }

      // Allow users to manage their own saved searches
      match /saved_searches/{searchId} {
        allow read, write: if request.auth.uid == userId;
      }
    }

    // Public read, agent-only writes for properties
    match /properties/{propertyId} {
      allow read: if true;
      allow create: if request.auth != null 
                    && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'agent'
                    && request.resource.data.agentId == request.auth.uid;
      allow update, delete: if request.auth != null 
                           && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'agent'
                           && resource.data.agentId == request.auth.uid;
    }

    // Rules for chat
    match /conversations/{conversationId} {
      // Allow read/update if the user is a participant. Use .get() to prevent errors on malformed docs.
      allow read, update: if request.auth != null && request.auth.uid in resource.data.get('participants', []);
      
      // Allow create if the user includes themselves as a participant in the new document.
      allow create: if request.auth != null && request.auth.uid in request.resource.data.get('participants', []);

      match /messages/{messageId} {
        // Allow reads if user is a participant of the parent conversation.
        allow read: if request.auth != null && request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.get('participants', []);
        
        // Allow message creation if user is a participant and the sender.
        allow create: if request.auth != null 
                      && request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.get('participants', [])
                      && request.resource.data.senderId == request.auth.uid;
        
        // Disallow updates and deletes to preserve chat history.
        allow update, delete: if false;
      }
    }
  }
}
